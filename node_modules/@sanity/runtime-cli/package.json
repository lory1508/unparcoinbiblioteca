{
  "name": "@sanity/runtime-cli",
  "description": "A new CLI generated with oclif",
  "version": "1.8.1",
  "author": "Sanity Runtime Team",
  "type": "module",
  "license": "MIT",
  "repository": "sanity-io/runtime-cli",
  "bugs": "https://github.com/sanity-io/runtime-cli/issues",
  "homepage": "https://github.com/sanity-io/runtime-cli",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=20.11.0"
  },
  "optionalPeerDependencies": {
    "tsx": "^4.19.3"
  },
  "files": [
    "./bin",
    "./dist",
    "./oclif.manifest.json"
  ],
  "bin": {
    "sanity-run": "./bin/run.js"
  },
  "scripts": {
    "build": "rollup -c && npm run build:bin && npm run build:static",
    "build:bin": "shx rm -rf dist *.tsbuildinfo && tsc -b",
    "build:static": "npm run copy:wrapper && npm run copy:server",
    "copy:server": "shx cp -r ./src/server/static ./dist/server",
    "copy:wrapper": "shx cp ./src/utils/child-process-wrapper.js ./dist/utils/child-process-wrapper.js",
    "lint": "biome ci",
    "lint:write": "biome check --write",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "npm run lint",
    "prepack": "oclif manifest && oclif readme",
    "test": "vitest run",
    "test:watch": "vitest",
    "version": "oclif readme && git add README.md"
  },
  "dependencies": {
    "@oclif/core": "^4",
    "@oclif/plugin-help": "^6",
    "@oclif/plugin-plugins": "^5",
    "eventsource": "^3.0.5",
    "inquirer": "^12.5.0",
    "jszip": "^3.10.1",
    "mime-types": "^2.1.35",
    "picocolors": "^1.1.1",
    "picospinner": "^3.0.0",
    "tinyhighlight": "^0.3.2",
    "xdg-basedir": "^5.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@codemirror/lang-json": "^6.0.1",
    "@codemirror/state": "^6.5.2",
    "@enhance/store": "^1.0.2",
    "@oclif/prettier-config": "^0.2.1",
    "@oclif/test": "^4",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@types/mime-types": "^2.1.4",
    "@types/node": "20",
    "codemirror": "^6.0.1",
    "mentoss": "^0.8.0",
    "oclif": "^4",
    "pretty-bytes": "^6.1.1",
    "pretty-ms": "^9.2.0",
    "rollup": "^4.36.0",
    "shx": "^0.4.0",
    "ts-node": "^10",
    "tsx": "^4.19.3",
    "typescript": "^5",
    "vitest": "3.0.8"
  },
  "oclif": {
    "bin": "sanity-run",
    "dirname": "sanity-run",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ],
    "state": "beta",
    "topicSeparator": " ",
    "topics": {}
  },
  "publishConfig": {
    "access": "public",
    "provenance": false
  }
}
